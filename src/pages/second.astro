<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>My Portfolio</title>
        <!-- <link rel="stylesheet" href="styles.css" /> -->
    </head>
    <body>
        <!-- Navbar -->
        <nav>
            <a href="#about">About</a>
            <a href="#skills">Skills & Knowledge</a>
            <a href="#projects">Projects</a>
            <a href="#education">Education</a>
            <a href="#contact">Contact</a>
        </nav>

        <!-- About Section -->
        <section id="about">
            <h1>About Me</h1>
            <div class="about-content">
                <img
                    src="myphoto.jpg"
                    alt="Your Picture"
                    class="profile-picture"
                />
                <p>
                    This is where the 'About' information from your CV will go.
                </p>
            </div>
        </section>

        <!-- Skills & Knowledge Section -->
        <section id="skills">
            <h2>Skills & Knowledge</h2>
            <ul>
                <li>Skill 1</li>
                <li>Skill 2</li>
                <li>Skill 3</li>
                <!-- More skills from the 'Skills & Knowledge' array -->
            </ul>
        </section>

        <!-- Projects Section -->
        <section id="projects">
            <h2>Projects</h2>
            <div class="project">
                <h3>Project Title</h3>
                <p>Project description here.</p>
                <p>
                    <strong>Technologies Used:</strong> Tech 1, Tech 2, Tech 3
                </p>
                <a href="#">Link to project</a>
            </div>
            <!-- Repeat for more projects -->
        </section>

        <!-- Education Section -->
        <section id="education">
            <h2>Education</h2>
            <div class="education-item">
                <h3>Institution Name</h3>
                <p>Degree or Certificate (Years Attended)</p>
            </div>
            <!-- Repeat for more education entries -->
        </section>

        <!-- Contact Section -->
        <section id="contact">
            <h2>Contact</h2>
            <div class="contact-item">
                <a href="profile_url"
                    ><img src="logo_url" alt="Platform Logo" />Platform</a
                >
            </div>
            <!-- Repeat for more contact entries -->
        </section>

        <!-- Footer -->
        <footer>
            <p>&copy; 2024 My Portfolio</p>
        </footer>
    </body>
</html>

<style>
    /* Basic Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* General Layout */
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
    }

    nav {
        background: #333;
        color: #fff;
        padding: 1em;
        text-align: center;
    }

    nav a {
        color: #fff;
        margin: 0 15px;
        text-decoration: none;
    }

    section {
        padding: 2em;
        border-bottom: 1px solid #ddd;
    }

    h1,
    h2 {
        color: #333;
    }

    /* About Section */
    #about p {
        font-size: 1.1em;
        color: #666;
    }

    /* Skills & Knowledge Section */
    #skills ul {
        list-style-type: none;
    }

    #skills li {
        display: inline-block;
        background: #f4f4f4;
        color: #333;
        padding: 8px 12px;
        margin: 5px;
        border-radius: 4px;
    }

    /* Projects Section */
    .project {
        margin: 1em 0;
    }

    .project h3 {
        margin-bottom: 0.5em;
    }

    .project a {
        display: inline-block;
        color: #1e90ff;
        text-decoration: none;
        margin-top: 5px;
    }

    .project a:hover {
        text-decoration: underline;
    }

    /* Education Section */
    .education-item {
        margin: 1em 0;
    }

    .education-item h3 {
        font-size: 1.2em;
        color: #333;
    }

    /* Contact Section */
    .contact-item {
        margin: 0.5em 0;
    }

    .contact-item a {
        color: #333;
        text-decoration: none;
    }

    .contact-item img {
        width: 24px;
        height: 24px;
        vertical-align: middle;
        margin-right: 8px;
    }

    /* Footer */
    footer {
        text-align: center;
        padding: 1em;
        background: #333;
        color: #fff;
    }

    .about-content {
        display: flex;
        align-items: center;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        margin-right: 20px;
    }
</style>

---
import Card from '@/components/Card.astro'
import CardContent from '@/components/CardContent.astro'
import CardHeader from '@/components/CardHeader.astro'
import CardTitle from '@/components/CardTitle.astro'
import Button from '@/components/Button.astro'
import {
    Linkedin,
    Github,
    ExternalLink,
    MessageCircle,
    PanelTop,
} from '@lucide/astro'
import ListItem from './astro/ListItem.astro'
import isCVMode from '@/lib/isCVMode'

const isCV = isCVMode()

const contactInfo = [
    {
        label: 'Location',
        value: 'Italy',
        link: 'https://www.youtube.com/watch?v=n4gSGOUxak4',
    },
]
---

<section id="contact" class="py-20 bg-muted/20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-fade-in">
            <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
                Get In Touch
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                I'm always open to discussing new opportunities, interesting
                projects, or just having a chat about technology.
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            {
                !isCV && (
                    <div class="lg:col-span-2 animate-fade-in">
                        <Card class="break-inside-avoid">
                            <CardHeader>
                                <CardTitle class="flex items-center gap-2">
                                    <Linkedin class="text-primary" size={24} />
                                    Let's Connect on LinkedIn
                                </CardTitle>
                            </CardHeader>
                            <CardContent class="space-y-6">
                                <p class="text-muted-foreground">
                                    Ready to collaborate or explore new
                                    opportunities? LinkedIn is my preferred
                                    platform for professional conversations and
                                    building meaningful connections in the tech
                                    industry.
                                </p>

                                <div class="bg-muted/50 p-6 rounded-lg border">
                                    <h3 class="font-semibold text-foreground mb-3">
                                        Why LinkedIn?
                                    </h3>
                                    <ul class="space-y-2 text-sm text-muted-foreground">
                                        <ListItem>
                                            Direct and professional
                                            communication
                                        </ListItem>
                                        <ListItem>
                                            Perfect for discussing career
                                            opportunities
                                        </ListItem>
                                        <ListItem>
                                            Easy scheduling for video calls or
                                            meetings
                                        </ListItem>
                                        <ListItem>
                                            Stay updated on my latest projects
                                            and thoughts
                                        </ListItem>
                                    </ul>
                                </div>

                                <Button size="lg" class="w-full hover-scale">
                                    <a
                                        href="https://www.linkedin.com/in/zhifanchen00/"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="flex items-center gap-2"
                                    >
                                        <Linkedin size={20} />
                                        Connect on LinkedIn
                                        <ExternalLink size={16} />
                                    </a>
                                </Button>
                            </CardContent>
                        </Card>
                    </div>
                )
            }

            <!-- Contact Info -->
            <div class="space-y-6 animate-fade-in">
                <Card class="break-inside-avoid">
                    <CardHeader>
                        <CardTitle>Contact Information</CardTitle>
                    </CardHeader>
                    <CardContent class="space-y-4">
                        {
                            contactInfo.map((info) => (
                                <div class="space-y-1">
                                    <p class="text-sm font-medium text-muted-foreground">
                                        {info.label}
                                    </p>
                                    <a
                                        href={info.link}
                                        target="_blank"
                                        class="text-foreground hover:text-primary transition-colors story-link"
                                    >
                                        {info.value}
                                    </a>
                                </div>
                            ))
                        }
                    </CardContent>
                </Card>

                <Card class="break-inside-avoid">
                    <CardHeader>
                        <CardTitle>Find Me Online</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <p class="text-muted-foreground text-sm mb-4">
                            Connect with me across different platforms to stay
                            in touch and see my work.
                        </p>
                        <div class="flex flex-col gap-3">
                            {
                                isCV && (
                                    <a
                                        href="https://c3n21.github.io"
                                        class="text-foreground hover:text-primary transition-colors story-link flex items-center gap-2"
                                    >
                                        <PanelTop size={16} />
                                        My portfolio
                                    </a>
                                )
                            }
                            <a
                                href="https://www.linkedin.com/in/zhifanchen00/"
                                class="text-foreground hover:text-primary transition-colors story-link flex items-center gap-2"
                            >
                                <Linkedin size={16} />
                                LinkedIn Profile
                            </a>
                            <a
                                href="https://github.com/c3n21"
                                target="_blank"
                                class="text-foreground hover:text-primary transition-colors story-link flex items-center gap-2"
                            >
                                <Github size={16} />
                                GitHub Repository
                            </a>
                            <a
                                href="https://matrix.to/#/@c3n21:matrix.org"
                                target="_blank"
                                class="text-foreground hover:text-primary transition-colors story-link flex items-center gap-2"
                            >
                                <MessageCircle size={16} />
                                Matrix (@c3n21:matrix.org)
                            </a>
                            <!-- <a -->
                            <!--     href="#" -->
                            <!--     class="text-foreground hover:text-primary transition-colors story-link flex items-center gap-2" -->
                            <!--     onclick="alert('Twitter handle coming soon!')" -->
                            <!-- > -->
                            <!--     <Twitter size={16} /> -->
                            <!--     Twitter -->
                            <!-- </a> -->
                        </div>
                    </CardContent>
                </Card>
            </div>
        </div>
    </div>
</section>
